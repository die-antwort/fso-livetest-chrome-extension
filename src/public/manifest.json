{
  "manifest_version": 2,
  "name": "f19n Livetest",
  "description": "Description goes here ...",
  "version": "0.0.1",
  "icons": {
    "16": "images/icon.png",
    "48": "images/icon.png",
    "128": "images/icon.png"
  },
  "background": {
    "scripts": ["js/background.js"],
    "persistent": true
  },
  "sandbox": {
    "pages": ["sandbox.html"]
  },
  "web_accessible_resources": [
    "panel.html",
    "rules.html",
    "sandbox.html",
    "js/*.js",
    "css/*.css"
  ],
  "content_scripts": [{
    "run_at": "document_start",
    "matches": ["<all_urls>"],
    "css": ["css/content_styles.css"]
  },{
    "run_at": "document_end",
    "matches": ["<all_urls>"],
    "js": ["js/document_end.js", "js/content_script.js"]
  }, {
    "run_at": "document_idle",
    "matches": ["<all_urls>"],
    "js": ["js/document_idle.js"]
  }],
  "permissions": [
    "storage",
    "tabs",
    "webRequest",
    "webNavigation",
    "*://*/*"
  ]
}
